{
  "name": "MindScan Web API",
  "checks": [
    {
      "type": "http",
      "url": "https://YOURDOMAIN/health",
      "expect_status": 200,
      "interval": 30
    },
    {
      "type": "http",
      "url": "https://YOURDOMAIN/api/auth/login",
      "expect_status": 405,
      "interval": 60
    },
    {
      "type": "tcp",
      "host": "YOURDOMAIN",
      "port": 443,
      "interval": 20
    }
  ]
}
